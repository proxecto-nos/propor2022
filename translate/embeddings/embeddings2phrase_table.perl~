#!/usr/bin/perl -w

binmode STDIN, ':utf8';
binmode STDOUT, ':utf8';
use utf8;

$file = shift(@ARGV);
open (DICO, $file) or die "O ficheiro nï¿½o pode ser aberto: $!\n";

##reading freeling dico
$token="";
while ($line = <DICO>) {
  chomp $line;
  if ($line !~ /[\w0-9]/){next}
  ($token, $lemma, $tag) = split (" ", $line);
  if (!$tag) {next}
  #print STDERR "#$token# - #$lemma# - #$tag#\n";
  $token = Trim ($token);
 

  if ( $tag =~ /^V|^NC|^AQ|^NN|^JJ/) {
    $Dico{$token}++
  }
}
 
while ($line = <STDIN>) {
  chomp $line;
  if ($line !~ /[\w0-9]/){next}
  ($ling1, $ling2, $peso) = split (" ", $line);
  $ling1 = Trim ($ling1);
  if ($Dico{$ling1}) {
      $ling2 =~ s/\(\'([\w]+)\'\,/$1/;
      $peso =~ s/([\w]+)\)/$1/;
      print "$ling1\|\|\|$ling2\n" if ($peso >= 0.65);
  }
}
  

sub Trim {
   local ($x) = $_[0];

   $x =~ s/^[\s]*//;
   $x =~ s/[\s]*$//;

   return $x;
}
